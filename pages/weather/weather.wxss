.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content: space-around;
}
.container .detail{
  display: flex;
  width:100%;
  flex-direction: column;
}
.container .detail .bar{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  
}
.container .detail .bar .box{
  width: 33.3%;
  text-align: center;
}
.container text{
  font-size: 80rpx;
  color:#3c5f81;
}
.container image{
  width:220rpx;
}